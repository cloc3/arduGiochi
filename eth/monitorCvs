/*
	Skecth di studio per il controllo di tre condensatori atraverso la porta seriale.
*/

#include <letturaIntero.h>
#include <evento.h>

void misura()
{
	presaDato->marcaTempo=micros();																// tempo corrente dall'accensione di arduino, in microsecondi
	presaDato->cr2=analogRead(CR2);
	presaDato->cr1=analogRead(CR1);
	presaDato->cr0=analogRead(CR0);

	if ( presaDato->cr1 > 550 ) {																	// mantiene la tensione del condensatore cr1 tra 450 mV e 550 mV
		digitalWrite(ALIMENTAZIONE,LOW);
	} else if ( presaDato->cr1 < 450) {
		digitalWrite(ALIMENTAZIONE,HIGH);
	}
}

void setup()
{
	pinMode(ALIMENTAZIONE, OUTPUT);
	Serial.begin(115200);
	digitalWrite(ALIMENTAZIONE,LOW);
}

void loop()
{
	if (abilitaMisura(numeroCicliRichiesti,corsoLettura)) { 			// attende che il sistema abbia ricevuto una richiesta di misura 
		if (! *corsoLettura) {																			//attende che la lettura richiesta sia completata
			for (int count=0;count<*numeroCicliRichiesti;count++) {
				misura();
				sprintf(str,"%lu %d %d %d\n", presaDato->marcaTempo, presaDato->cr0, presaDato->cr1, presaDato->cr2);
				Serial.print(str);
				delay(RITARDO);
			}
		*numeroCicliRichiesti=0;
		}
	}
}
